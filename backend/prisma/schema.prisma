// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modele example :
model User {
	id Int @id @default(autoincrement())
	createdAt DateTime @default(now())
	updateAt DateTime @updatedAt

	email String
	hash String

	firstName String?
	lastName String?
}
